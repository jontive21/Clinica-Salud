extends ../../layout

block content
  h1.mb-4 #{title}

  if errors && errors.length > 0
    div.alert.alert-danger
      h5 Errores de Validación:
      ul
        each error in errors
          li= error.msg

  form(method="POST" action="/catalogo-alergias")
    div.form-group.mb-3
      label(for="nombre_alergia") Nombre de la Alergia:
      input(type="text" id="nombre_alergia" name="nombre_alergia" value=alergia && alergia.nombre_alergia ? alergia.nombre_alergia : '' required class="form-control")
      small.form-text.text-muted El nombre de la alergia debe ser único.

    div.form-group.mb-3
      label(for="descripcion_alergia") Descripción (Opcional):
      textarea(id="descripcion_alergia" name="descripcion_alergia" class="form-control" rows="3") #{alergia && alergia.descripcion_alergia ? alergia.descripcion_alergia : ''}

    button(type="submit" class="btn btn-primary") Crear Alergia
    a(href="/catalogo-alergias" class="btn btn-secondary ml-2") Cancelar
